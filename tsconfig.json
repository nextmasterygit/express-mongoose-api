{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true, // Add this line
    "declarationMap": true // Optional: generates map files for declarations
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
